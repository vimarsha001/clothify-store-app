<AnchorPane fx:id="loadCartForm" prefHeight="412.0" prefWidth="746.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CartFormController">
   <children>
      <Pane layoutY="-1.0" prefHeight="60.0" prefWidth="746.0" style="-fx-background-color: #FFFFFF;">
         <children>
            <Label layoutX="228.0" layoutY="14.0" prefHeight="37.0" prefWidth="250.0" text="Order Management - Cart" textFill="#503e9e">
               <font>
                  <Font name="Arial Black" size="18.0" />
               </font>
            </Label>
            <Label fx:id="dateLbl" layoutX="624.0" layoutY="24.0" text="Label">
               <font>
                  <Font name="Arial Black" size="12.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <ImageView fx:id="backBtn" fitHeight="42.0" fitWidth="35.0" layoutX="20.0" layoutY="14.0" onMouseClicked="#backBtnOnAction" preserveRatio="true">
         <image>
            <Image url="@../images/left-arrow.png" />
         </image>
      </ImageView>
      <Pane layoutY="370.0" prefHeight="42.0" prefWidth="746.0" style="-fx-background-color: #514CDF;" />
      <TextField fx:id="qtyTxt" alignment="CENTER" layoutX="38.0" layoutY="282.0" promptText="Qty " style="-fx-background-radius: 10;">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </TextField>
      <JFXButton fx:id="addBtn" buttonType="RAISED" layoutX="251.0" layoutY="309.0" onAction="#addBtnOnAction" prefHeight="30.0" prefWidth="72.0" style="-fx-background-color: #503e9e; -fx-background-radius: 15;" text="Add" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="deleteBtn" buttonType="RAISED" layoutX="657.0" layoutY="309.0" onAction="#deleteBtnOnAction" prefHeight="30.0" prefWidth="72.0" style="-fx-background-color: #3BADCD; -fx-background-radius: 15;" text="Delete" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="updateBtn" buttonType="RAISED" layoutX="381.0" layoutY="309.0" onAction="#updateBtnOnAction" prefHeight="30.0" prefWidth="72.0" style="-fx-background-color: #7E66E3; -fx-background-radius: 15;" text="Update" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </JFXButton>
      <TableView fx:id="cartTbl" layoutX="250.0" layoutY="86.0" prefHeight="200.0" prefWidth="479.0">
         <columns>
            <TableColumn fx:id="custIdCol" prefWidth="112.0" text="Customer ID" />
            <TableColumn fx:id="prodIdCol" prefWidth="97.0" text="Product ID" />
            <TableColumn fx:id="sizeCol" prefWidth="86.0" text="Size" />
            <TableColumn fx:id="qtyCol" prefWidth="87.0" text="Qty" />
            <TableColumn fx:id="totCol" prefWidth="96.0" text="Total" />
         </columns>
         <effect>
            <Glow />
         </effect>
      </TableView>
      <JFXComboBox fx:id="prodIdCmb" focusColor="#973cd3" layoutX="38.0" layoutY="130.0" onAction="#prodIdCmbOnAction" prefHeight="25.0" prefWidth="144.0" promptText="Product ID" unFocusColor="#6d44e8" />
      <JFXComboBox fx:id="categoryCmb" focusColor="#973cd3" layoutX="38.0" layoutY="86.0" onAction="#categoryCmbOnAction" prefHeight="25.0" prefWidth="144.0" promptText="Category" unFocusColor="#6d44e8" />
      <JFXButton fx:id="searchBtn" buttonType="RAISED" layoutX="518.0" layoutY="309.0" onAction="#searchBtnOnAction" prefHeight="30.0" prefWidth="72.0" style="-fx-background-color: #6293DB; -fx-background-radius: 15;" text="Search" textFill="WHITE">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </JFXButton>
      <TextField fx:id="custIdTxt" alignment="CENTER" layoutX="38.0" layoutY="174.0" promptText="Customer ID" style="-fx-background-radius: 10;">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </TextField>
      <TextField fx:id="sizeTxt" alignment="CENTER" disable="true" layoutX="38.0" layoutY="212.0" promptText="Size" style="-fx-background-radius: 10;">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </TextField>
      <Label fx:id="qtyStockTxt" layoutX="38.0" layoutY="324.0" prefHeight="16.0" prefWidth="144.0" textAlignment="CENTER">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </Label>
      <TextField fx:id="priceTxt" alignment="CENTER" disable="true" layoutX="38.0" layoutY="246.0" promptText="Price" style="-fx-background-radius: 10;">
         <font>
            <Font name="Arial Black" size="11.0" />
         </font>
      </TextField>
   </children>
</AnchorPane>
